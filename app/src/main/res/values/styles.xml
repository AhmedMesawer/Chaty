<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="loadingIndicatorText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
    </style>

    <style name="unColoredButtonStyle">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textViewStyle">
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="secondaryTextViewStyle">
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:textColor">@color/secondaryLightColor</item>
    </style>

    <style name="layoutMargins">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

</resources>
